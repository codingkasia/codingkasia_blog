<% include ./partials/newPostHeader %>
<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/posts" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="post[image]" placeholder="image">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="post[body]"></textarea>
        </div>
        <input class="ui green big inverted button" type="submit">
    </form>
</div>
<% include ./partials/footer %>
